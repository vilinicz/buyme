.form-container.radius-box.glassy-bg.small-10.small-centered.medium-8.large-6.columns
  %h2 Login
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .mb1= f.email_field :email, autofocus: true, placeholder: "Email", class: "radius"
    .mb1= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "radius"
    - if devise_mapping.rememberable?
      .switch.round.small.mb1
        .inline-block.left.prm
          = f.check_box :remember_me
          = f.label :remember_me
        %span Remember me
    .clear= f.submit "Let me in", class: "button"
  = render "devise/shared/links"