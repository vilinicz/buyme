.form-container.radius-box.glassy-bg.small-10.small-centered.medium-8.large-6.columns
  %h2 Register
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .mb1= f.email_field :email, autofocus: true, placeholder: "Email", class: "radius"
    .mb1= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "radius"
    .mb1= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password", class: "radius"
    %div= f.submit "Let's Go", class: "button"
  = render "devise/shared/links"