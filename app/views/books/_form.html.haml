= form_for(@book) do |f|
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited this book from being saved:
      %ul
        - @book.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :release_year
    %br/
    = f.number_field :release_year
  .field
    = f.label :price
    %br/
    = f.text_field :price
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :image_url
    %br/
    = f.text_field :image_url
  .actions
    = f.submit
